h2 Fieldsets and form elements
p Form elements displayed in a table, in order to have proper alignement between labels and inputs.

form
	fieldset
		legend My legend

		table
			tr
				td
					label(for='exampleTextId') Example text : 
				td
					input(id='exampleTextId' name='exampleText' type='text' placeholder='Firstname')

			tr
				td
					label(for='exampleTextAreaId') Example textarea : 
				td
					textarea(id='exampleTextAreaId' name='exampleTextArea' placeholder='Your message here')
			
			tr
				td
					label(for='exampleSelectId') Example select : 
				td
					select(id='exampleSelectId' name='exampleSelect')
						- for (var i = 1; i <= 2; i++)
							optgroup(label='Option group ' + i)
								- for (var j = 1; j <= 3; j++)
									option(value=j)= 'Option ' + j

			tr
				td
					label(for='exampleTextAreaId') Example radios without fieldset :
				td
					- for (var i = 1; i <= 3; i++)
							label(for='exampleRadiosFId'+i)= 'item ' + i
							input(id='exampleRadiosFId'+i name='exampleRadiosF' type='radio' value='value'+i)

			tr
				td
					fieldset(id='exampleRadiosH')
						legend Example radios fieldset horizontal
						- for (var i = 1; i <= 3; i++)
							label(for='exampleRadiosHId'+i)= 'item ' + i
							input(id='exampleRadiosHId'+i name='exampleRadiosH' type='radio' value='value'+i)

			tr
				td
					fieldset(id='exampleRadiosV')
						legend Example radios fieldset vertical
						- for (var i = 1; i <= 3; i++)
							label(for='exampleRadiosVId'+i)= 'item ' + i
							input(id='exampleRadiosVId'+i name='exampleRadiosV' type='radio' value='value'+i)

			tr
				td
					label(for='exampleCheckboxes') Example checkboxes horizontal :
				td
					- for (var i = 1; i <= 3; i++)
							label(for='exampleCheckboxesHId'+i)= 'item ' + i
							input(id='exampleCheckboxesHId'+i name='exampleCheckboxesH' type='checkbox' value='value'+i)

			tr
				td
					label(for='exampleCheckboxes') Example checkboxes vertical :
				td
					- for (var i = 1; i <= 3; i++)
							label(for='exampleCheckboxesVId'+i)= 'item ' + i
							input(id='exampleCheckboxesVId'+i name='exampleCheckboxesV' type='checkbox' value='value'+i)

			tr
				td
					label(for='passwordId') Password : 
				td
					input(id='passwordId' name='password' type='password' placeholder='')

			tr
				td
					label(for='fileId') File : 
				td
					input(id='fileId' name='file' type='file' placeholder='')

			tr
				td
					input(id='submitId' name='submit' type='submit' value='Submit label')

			tr
				td
					button(id='submitButtonId' name='submitButton' type='submit') Submit button label

